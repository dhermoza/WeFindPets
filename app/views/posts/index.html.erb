<div class="container">
  <div class="row">
      <% @posts.each do |post| %>
        <%= link_to  post_path(post), class: "card-trip-wrapper" do %>
        <div class="col-4">
          <div class="card-trip m-5">
            <% if !post.pet.photos.empty?  %>
              <%= cl_image_tag post.pet.photos.first.key, height: 150, width: 200, crop: :fill %>
            <% end %>
            <div class="card-trip-infos">
              <div >
                <h2><%= post.title %></h2>
                <p class="card-trip-description"><%= post.description %></p>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      <% end %>
  </div>
</div>
