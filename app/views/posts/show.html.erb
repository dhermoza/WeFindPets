    <% @post.pet.photos.each_with_index do |photo,index| %>
      <% if index == 0 %>
        <%= cl_image_tag photo.key, height: 150, width: 250, class: "image-grid-col-2 image-grid-row-2", crop: :thumb, 'data-toggle': :modal, 'data-target': "#photo#{index}" %>
      <% else %>
        <%= cl_image_tag photo.key, height: 150, width: 250, crop: :thumb, 'data-toggle': :modal, 'data-target': "#photo#{index}" %>
      <% end %>
    <% end %>
