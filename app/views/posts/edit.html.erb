<div class="container mt-5">
  <div class="row">
    <div class="col-6">
      <h3 class="mb-3 text-center">Editar publicación</h3>
      <%= simple_form_for [@pet, @post] do |f| %>
      <div class="row">
        <div class="col-6">
          <%= f.input :title, placeholder: "Título", label: false %>
        </div>
      </div>
      <div class="row">
          <div class="col-6">
            <%= f.input :description, as: :text , placeholder: "Descripcion", label: false %>
          </div>
          <div class="col-6">
            <%= f.input :status, label: "Reportar como", as: :radio_buttons, collection: ['Perdido', 'Encontrado'] %>
          </div>
        </div>
      <div class="row">
        <div class="col-6">
          <%= f.input :address, placeholder: "Dirección", label: false %>
        </div>
        <div class="col-6 align-self-start">
          <%= link_to "Previsualizar", locate_path(@post), class: "btn btn-primary", id: "preview" %>
        </div>
      </div>
      <div class="container text-center">
        <div class="row">
          <div class="col">
            <%= f.button :submit, "Guardar", class: "btn btn-info" %>

          </div>
        </div>
      </div>
      <%end  %>
    </div>
    <p class="d-none">Coordenadas</p>
    <div class="col-6">
        <div id="map" style="height: 300px; width: 600px" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>