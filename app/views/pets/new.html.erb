  <%= simple_form_for @pet do |f|%>
  <div class="row">
    <div class="col align-items-center">
    <%= f.input :name, placeholder: "Nombre", label: false %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.input :gender, placeholder: "Sexo", label: false%>
    </div>
    <div class="col">
      <%= f.input :age, placeholder: "Edad", label: false %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.input :size, placeholder: "TamaÃ±o", label: false %>
    </div>
