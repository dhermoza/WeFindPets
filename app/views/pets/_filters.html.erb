
<h4>Filtrar por:</h4>
<%= form_with url: pets_path, method: :get, local: true do |f| %>
<div class="d-flex align-items-center justify-content-around cont-filters">
    <div class="form-group col-3">
<%= f.label :breed, "Breed" %>
<%= f.select :breed,
 options_for_select(Pet.breeds),
        {},
        { class:"form-control" }
        %>

</div>
<div class="form-group col-3">
  <%= f.label :size, "Size" %>
  <%= f.select :size,
   options_for_select( Pet::SIZE
        ),
        {},
        { class:"form-control" }
        %>
</div>
<div class="form-group col-3">
  <%= f.label :color, "Color" %>
  <%= f.select :color,
  options_for_select(Pet::COLOR
        ),
        {},
        { class:"form-control" }
        %>
</div>

<%= f.select :breed,
  options_for_select(Pet::ANIMAL),
        {},
        { class:"form-control" }
        %>
</div>

<%= f.submit "Filtrar", class: "btn-light-gradient " %>

</div>
<% end %>
