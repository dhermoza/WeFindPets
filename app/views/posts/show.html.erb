<section class="post-show-page">
  <!-- titulo -->
 <div class="p-3">
    <div class="d-flex justify-content-center">
      <h2 class="px-5">
        <%= @post.title.capitalize%>
      </h2>
      <% if policy(@post).edit? %>
       <%= link_to "Editar", edit_post_path(@post), class: "btn btn-primary", id: "publication" %>
      <% end %>
    </div>
  </div>
  <!-- img -->
 <div class="image-grid">
    <% @post.pet.photos.each_with_index do |photo,index| %>
      <% if index == 0 %>
        <%= cl_image_tag photo.key, height: 150, width: 250, class: "image-grid-col-2 image-grid-row-2", crop: :thumb %>
      <% else %>
        <%= cl_image_tag photo.key, height: 150, width: 250, crop: :thumb %>
      <% end %>
    <% end %>
 </div>
  <!-- descripcion -->
  <div class=" container px-5 d-flex justify-content-center">
    <div class="col-6">
      <div class="">
        <h2>Descripci√≥n</h2>
        <p><%= @post.description.capitalize %></p>
        <br>
        <div class="d-flex justify-content-center">
          <div class="col-8 ">
            <h2>Caracteristicas</h2>
          </div>
          <% if policy(@post).edit? %>
          <div class="col-4 ">
            <%= link_to "Editar mascota", edit_pet_path(@post), class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
        </div>
        <p><%= @post.pet.name.capitalize %></p>
        <p><%= @post.pet.gender.capitalize %></p>
        <p><%= @post.pet.size.capitalize %></p>
        <p><%= @post.pet.animal.capitalize %></p>
        <p><%= @post.pet.breed.capitalize %></p>
      </div>
      <div class="col-6">
        <div data-controller="show-map">
          <div id="map" data-show-map-target="map"
            style="width: 100%; height: 400px;"
            data-marker="<%= @marker.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>

 <!-- btn -->
 <% if !policy(@post).edit? %>
  <div class="container">
    <div class="row">
      <div class="col text-center px-5 py-3">
        <button class="btn btn-light-gradient" data-toggle="modal" data-target="#contactForm">Contactar</button>
      </div>
    </div>
  </div>
  <% end %>
</section>

<%= render "contact_form", post: @post %>
<%= render "message_form", post: @post %>
