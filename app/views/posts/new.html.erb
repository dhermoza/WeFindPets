<div class="container mt-5 col-8" data-controller="insert-map">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <h2 class="mb-3 text-left">Crea tu Publicación</h2>
      <%= simple_form_for [@pet, @post] do |f| %>
        <div class="row">
          <div class="col-10">
            <%= f.input :title, placeholder: "Título", label: false %>
          </div>
        </div>
        <div class="row">
            <div class="col-10">
              <%= f.input :description, as: :text , placeholder: "Descripcion", label: false, hint: 'Mínimo 10 caracteres' %>
            </div>
          </div>
          <div class="row">
            <div class="col-10">
                <%= f.input :status, :prompt => 'Reportar como',  label: false, collection: ['Perdido', 'Encontrado'] %>
              </div>
          </div>
          <div class="row">
            <div class="col-10 d-flex">
                <!--<%= link_to "Previsualizar", locate_path(@post), class: "btn-gradient text-decoration-none", id: "preview",
                      data: { insert_map_target: 'preview', action: 'click->insert-map#showMap'} %>-->
              <div class="flex-grow-1">
                <%= f.input :address, placeholder: "Dirección", label: false, class: "", input_html: { data: { insert_map_target: 'inputAddress' } } %>
              </div>
              <div class="flex-shrink-1 mt-2 ml-2">
              <%= link_to locate_path(@post), class: "btn-gradient text-decoration-none align-self-end", id: "preview",
                      data: { insert_map_target: 'preview', action: 'click->insert-map#showMap'} do %>
                    <i class="fas fa-map-marked"></i>
                <% end %>
              </div>
            </div>
          </div>
          <p class="d-none">Coordenadas</p>
          <div class="col-10 pl-0 pr-0">
              <div id="map" data-insert-map-target="map" style="height: 300px; width: 100%" data-marker="" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
          </div>
          <div id="out" data-insert-map-target="out">
          <p></p>
          <div class="container text-center">
            <div class="row">
              <div class="col">
                <%= f.button :submit, "Publicar", class: "btn-gradient mb-5" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
