<div class="message-container " id="message-<%= message.id %>">
  <div class="author">

    <% if message.user.id == current_user.id %>
      <div class="row">

        <div class="col-10">
          <div class="row justify-content-end">
          <div class="col-12">
            <div class="row">
              
              
              <div class="col-12 text-right">
                <small>
                  <%= message.user.name.capitalize! %>
                </small>

              </div>
            </div>
              </div>
            <div class="col-10 text-left d-flex justify-content-end">
              <div class="talk-bubble bg-right tri-right right-top">
  <div class="talktext">
                <p class="">
                  <%= message.description %>
                </p>
              </div>
  </div>
            </div>
<div class="col-6 text-right">
                <small>
                  <%= message.created_at.strftime("Enviado %l:%M%p") %>
                </small>

              </div>
          </div>
        </div>
        <div class="col-1">
          <%= render "shared/avatar" , user: { avatar: message.user.avatar } %>
        </div>
      </div>
      <% else %>
        <div class="row">
          <div class="col-1">
            <%= render "shared/avatar" , user: { avatar: message.user.avatar } %>
          </div>
          <div class="col-10">
            <div class="row">
              <div class="col-10">
                <div class="row">
                  <div class="col-12">
                    <small>
                      <%= message.user.name %>
                    </small>
                  </div>
                  
                </div>
              </div>
              <div class="col-8">
                <div class="talk-bubble bg-left tri-right left-top">
  <div class="talktext">
                  <p><%= message.description %></p>
                </div>
</div>
              </div>
<div class="col-6 text-left">
                    <small>
                      <%= message.created_at.strftime("Enviado %l:%M%p") %>
                    </small>

                  </div>
            </div>
          </div>

        </div>

        <% end %>







  </div>


</div>