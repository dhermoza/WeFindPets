
<div class="row">
  <div class="col-6">
    <%= render "filters", pets: @pets %>
    <div class="cards">
      <% @pets.each do |pet| %>
      <%= link_to  post_path(pet), class: "card-trip-wrapper" do %>
    <div class="card-trip">
      <% if !pet.photos.empty?  %>
        <%= cl_image_tag pet.photos.first.key, height: 150, width: 200, crop: :fill %>
      <% end %>
      <div class="card-trip-infos">
        <div >
          <h4><%= pet.name %></h4>
          <p class="t-overflow"><%= pet.breed %></p>
        </div>
      </div>
    </div>
  <% end %>

      <% end %>
    </div>
  </div>
 <div class="col-6">
        <div id="map"
          style="width: 100%; height: 400px;"
          data-marker="<%= @marker.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
</div>
