                #   ['Pequeño','pequeño'],
                #   ['Mediano','mediano'],
                #   ['Grande','grande'],
                # ]
                ),
                {},
                { class:"form-control" }
                %>
      </div>
  </div>
  <div class="row">
      <div class="form-group col-6">
        <%= f.label :color, "Color" %>
        <%= f.select :color,
        options_for_select(Pet::COLOR
                #   [
                #   ['Todos',nil],
                #   ['Blanco','blanco'],
                #   ['Negro','negro'],
                #   ['Multi color','multi color'],
                # ]
                ),
                {},
                { class:"form-control" }
                %>
      </div>
      <div class="form-group col-6">
        <%= f.label :gender, "Sexo" %>
        <%= f.select :gender,
        options_for_select(Pet::GENDER
                #   [
                #   ['Todos',nil],
                #   ['Hembra','hembra'],
                #   ['Macho','macho'],
                # ]
                ),
                {},
                { class:"form-control" }
                %>
      </div>
  </div>
      <%= f.submit "Filtrar", class: "btn-light-gradient " %>
  </div>
<% end %>
