        options_for_select(Pet.breeds),
                {},
                { class:"form-control" }
                %>
      </div>
      <div class="form-group col-6">
        <%= f.label :size, "Tamaño" %>
          <%= f.select :size,
          options_for_select(Pet::SIZE
                #   [
