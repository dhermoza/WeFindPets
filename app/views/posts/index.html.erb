<div class="container my-5">
  <%= simple_form_for :search, url: posts_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>
  <h3 class="pb-3">Resultados de la búsqueda:
  <% if @posts.size > 1 %>
      <%= pluralize @posts.size, "publicaciones" %>
  <% else %>
      <%=  pluralize @posts.size, "publicación" %>
  <% end %>
  </h3>
  <div class="row">
    <div class="col-6">
      <div data-controller="map-index">
        <div id="map" data-map-index-target="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
    <div class="col-6">
        <div class="cards">
          <% @posts.each do |post| %>
            <%= link_to  post_path(post), class: "card-trip-wrapper" do %>
              <div class="card-trip">
                  <% if !post.pet.photos.empty?  %>
                    <%= cl_image_tag post.pet.photos.first.key, height: 150, width: 200, crop: :fill %>
                  <% end %>
                  <div class="card-trip-infos">
                    <div>
                      <h5><%= post.title %></h5>
                      <p class="t-overflow"><%= post.description %></p>
                    </div>
                  </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
